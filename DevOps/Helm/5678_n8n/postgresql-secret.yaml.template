apiVersion: v1
kind: Secret
metadata:
  name: postgresql-secret
  namespace: n8n
type: Opaque
stringData:
  # 重要: postgres-password 是 PostgreSQL 超級管理員 (postgres) 的密碼
  # 請在這裡填入一個高強度的密碼
  postgres-password: "YOUR_POSTGRES_ADMIN_PASSWORD_HERE"

  # 重要: password 是 n8n 用來連線資料庫的使用者 (n8n_user) 的密碼
  # 請在這裡填入一個高強度的密碼
  password: "YOUR_N8N_DB_PASSWORD_HERE"