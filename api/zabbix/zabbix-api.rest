// https://www.zabbix.com/documentation/4.0/manual/api/reference/user/login
### 登入
# @name login
GET {{url}}/api_jsonrpc.php
Content-Type: application/json

{
    "jsonrpc": "2.0",
    "method": "user.login",
    "params": {
        "user": "Admin",
        "password": "zabbix"
    },
    "id": "{{$guid}}",
    "auth": null
}

@token={{login.response.body.result}}


// https://www.zabbix.com/documentation/4.0/manual/api/reference/host/get
### 查詢 被監控站台 清單
# @name hosts
GET {{url}}/api_jsonrpc.php
Content-Type: application/json

{
    "jsonrpc": "2.0",
    "method": "host.get",
    //"params": {},
    "params": {
        //"countOutput": true,
        "output": [
            "hostid",
            "host"
        ],
        "selectInterfaces": [
            "interfaceid",
            "ip"
        ]
    },
    "id": "{{$guid}}",
    "auth": "{{token}}"
}


